                        font_style: "H6"
                        adeptive_height: True
                     MDLabel:
                        text: 'Серийный номер:'
                        halign: 'center'
                        font_style: "Body1"
                        adeptive_height: True
                     TextInput:
                        id: text_read
                        text: ''
                        multiline: False
                        font_style: "H2"
                        halign: "center"
                        size_hint_y: .5

                     Button:
                        id: button_read
                        text: 'Поиск'
                        font_style: "H2"
