      orientation: 'vertical'
      
      MDToolbar:
         left_action_item: [["magnify", lambda x:None]]
         MDLabel:

            text: 'E-manometr'
#            font_name:"Montserrat"
      MDBottomNavigation:
         MDBottomNavigationItem:
            icon: "gauge"
